<odoo>
    <data>
        <!-- Odoo a besoin de champs "prédéfini", exemple : <field name = "name"> /!\ IL NE FAUT PAS CHANGER L'ATTRIBUT NAME-->
        <!-- Vue -->

        <!-- nom de la vue -->
        <!-- le modèle lié -->
        <!-- indique la priorité de l'affichage du menu, par défaut, c'est le menu avec la plus faible valeur qui est affiché -->
        <!-- à partir de là on indique ce qu'on va afficher -->
        <!-- disposition de l'affichage tre = liste par exemple -->
        <!-- champs que l'on voit -->
        <record id ="id_iut_it_brand_view" model="ir.ui.view">
            <field name = "name">Brand.View</field>
            <field name = "model">iut.it.brand</field>
            <field name = "priority">1</field>
            <field name = "arch" type="xml">
                <tree string = "Device">
                    <field name = "name"></field>
                    <field name = "warrantyDelayMonth"></field>
                    <field name = "supportPhone"></field>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="form_action_brand" model="ir.actions.act_window">
            <field name = "name">Brand</field>
            <field name = "type">ir.actions.act_window</field>
            <field name = "res_model">iut.it.brand</field>
            <field name = "view_mode">tree</field>
        </record>


    </data>
</odoo>